{
  "name": "tweets-graph",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "html-to-image": "^1.8.5",
    "next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-tooltip": "^4.2.21"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.15",
    "@types/next": "^9.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "start": "node ./dist/server",
    "build": "next build ./dist/client",
    "dev": "nodemon ./dist/server",
    "tsc": "run-p tsc:client tsc:server",
    "tsc:w": "run-p tsc:w:*",
    "tsc:client": "tsc -p ./client",
    "tsc:server": "tsc -p ./server",
    "tsc:w:client": "tsc -p ./client -w",
    "tsc:w:server": "tsc -p ./server -w",
    "copy-files": "cp -vr ./static/. dist/client/public/ && cp -vr ./styles/ dist/client/styles/",
    "postinstall": "yarn tsc",
    "heroku-postbuild": "run-s copy-files build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
